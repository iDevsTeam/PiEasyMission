@model IEnumerable<PiEasyMissionWeb.Models.SkillModels>

@{
    ViewBag.Title = "MySkills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Skills</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SkillName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillLevel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SkillName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkillLevel)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SkillId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SkillId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SkillId })
        </td>
    </tr>
}

</table>
